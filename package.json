{
  "name": "@hyperjump/browser",
  "version": "2.0.0-dev",
  "description": "A client for working with JSON Reference (`$ref`) documents",
  "keywords": [
    "$ref",
    "jref",
    "hypermedia",
    "browser",
    "client"
  ],
  "author": "Jason Desrosiers <jdesrosi@gmail.com>",
  "license": "MIT",
  "repository": "github:hyperjump-io/browser",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/jdesrosiers"
  },
  "type": "module",
  "exports": {
    ".": "./src/hyperjump/index.js",
    "./json": "./src/json/index.js",
    "./jref": "./src/jref/index.js"
  },
  "bin": {
    "rejson": "./src/json/rejson-cli.js",
    "jref": "./src/jref/jref-cli.js"
  },
  "scripts": {
    "lint": "eslint src",
    "test": "vitest --watch=false",
    "coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "docs": "typedoc",
    "prepack": "tsc --project tsconfig.build.json",
    "postpack": "node ./bin/postpack.js"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "*",
    "@types/content-type": "*",
    "@types/moo": "*",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "eslint-import-resolver-typescript": "*",
    "eslint-plugin-import": "*",
    "typedoc": "*",
    "typescript-eslint": "*",
    "undici": "*",
    "vitest": "*"
  },
  "dependencies": {
    "@hyperjump/uri": "^1.3.0",
    "content-type": "^1.0.5",
    "moo": "^0.5.2",
    "unified": "^11.0.5",
    "unified-args": "^11.0.1",
    "vfile": "^6.0.3"
  }
}
